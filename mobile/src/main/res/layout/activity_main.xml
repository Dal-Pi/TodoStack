<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/main_rl_action_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/main_ab_ibtn_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:clickable="true"
                android:focusable="false"
                android:src="@drawable/small_oval"
                android:tintMode="src_in"
                android:tint="@color/colorAccent"
                android:background="@drawable/ripple"/>
            <TextView
                android:id="@+id/main_ab_text_actionbar_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/main_ab_ibtn_navigation"
                android:text="@string/app_name"
                android:textSize="@dimen/text_size_title"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_rl_input_info_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_size"
            android:layout_below="@id/main_rl_action_bar"
            android:layout_alignParentEnd="true">
            <EditText
                android:id="@+id/main_iib_edit_year"
                android:layout_width="@dimen/edit_width_year"
                style="@style/EditViewStyle"
                android:hint="@string/year"
                android:inputType="number"/>
            <EditText
                android:id="@+id/main_iib_edit_month"
                android:layout_width="@dimen/edit_width_month_and_day"
                style="@style/EditViewStyle"
                android:layout_toEndOf="@id/main_iib_edit_year"
                android:hint="@string/month"
                android:inputType="number"/>
            <EditText
                android:id="@+id/main_iib_edit_day"
                android:layout_width="@dimen/edit_width_month_and_day"
                style="@style/EditViewStyle"
                android:layout_toEndOf="@id/main_iib_edit_month"
                android:hint="@string/day"
                android:inputType="number"/>
            <Button
                android:id="@+id/main_iib_btn_calendar"
                style="@style/ButtonStyleInActivity"
                android:layout_toEndOf="@id/main_iib_edit_day"
                android:text="@string/calendar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_rl_input_name_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_size"
            android:layout_below="@id/main_rl_input_info_bar"
            android:layout_alignParentEnd="true">
            <EditText
                android:id="@+id/main_inb_edit_name"
                android:layout_width="@dimen/edit_width_name"
                style="@style/EditViewStyle"
                android:hint="@string/todo_name"/>
            <CheckBox
                android:id="@+id/main_inb_cb_task"
                android:layout_width="@dimen/button_min_width"
                style="@style/TextViewStyle"
                android:layout_toEndOf="@id/main_inb_edit_name"
                android:text="@string/is_task"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>