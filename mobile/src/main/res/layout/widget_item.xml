<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/widget_img_bg"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_marginTop="7dip"
        android:layout_marginBottom="7dip"
        android:scaleType="centerInside"
        android:src="@drawable/oval_widget_item"/>

    <TextView
        android:id="@+id/widget_text_todo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:text="@string/todo_initial_info"
        android:textSize="@dimen/text_size_widget_item"
        android:textColor="@color/color_white"
        android:gravity="center"
        />
</FrameLayout>