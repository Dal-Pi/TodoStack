<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/view_min_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/text_size_textview</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="TextViewStyleInActivity" parent="@style/TextViewStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/selector_transparent</item>
    </style>
    <style name="TextViewStyleInDialog" parent="@style/TextViewStyle">
        <item name="android:background">@drawable/selector_transparent</item>
    </style>
    <style name="EditViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/view_min_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_edit</item>
    </style>
    <style name="ButtonStyleBase">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/selector_transparent</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ButtonStyle" parent="@style/ButtonStyleBase">
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>
    <style name="ButtonStyleInActivity" parent="@style/ButtonStyle">
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:minHeight">@dimen/view_min_height</item>
        <item name="android:paddingStart">@dimen/button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/button_horizontal_padding</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="TextButtonStyle" parent="@style/ButtonStyleBase">
        <item name="android:minHeight">@dimen/view_min_height</item>
        <item name="android:textSize">@dimen/text_size_text_clickable</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextButtonStyleInactivity" parent="@style/TextButtonStyle">
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="CheckBoxStyle" parent="@style/ButtonStyleBase">
        <item name="android:minHeight">@dimen/view_min_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/ripple</item>
    </style>
    <style name="FloatingActionButtonStyle">
        <item name="android:background">@drawable/ripple_fab</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:padding">@dimen/fab_padding</item>
        <item name="android:layout_margin">@dimen/fab_layout_margin</item>
    </style>

</resources>
